<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="luke.Instapage.word"
    android:versionCode="10"
    android:versionName="2.0">

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="26" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/gator"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/bgn">

        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity" />

        <activity
            android:name="luke.Instapage.word.activities.ImageActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="luke.Instapage.word.activities.ResultDisplayActivity" />
        <activity android:name="luke.Instapage.word.activities.FinishedActivity" />
        <activity android:name="luke.Instapage.word.activities.InfoActivity" />

    </application>

</manifest>