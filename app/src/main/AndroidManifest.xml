<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="luke.Instapage.word"
    android:versionCode="10"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
   

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" >
    </uses-feature>

    <application
        android:allowBackup="true"
        android:allowClearUserData="true"
        android:icon="@drawable/gator"
        android:label="@string/app_name"
        android:screenOrientation="portrait" 
        android:theme="@style/bgn">
        <activity
            android:name="luke.Instapage.word.activities.SplashActivity"
            android:label="@string/title_splash" >\  <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>

        </activity>
        <activity
            android:name="luke.Instapage.word.activities.ImageActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >

        </activity>
        <activity
            android:name="luke.Instapage.word.activities.ResultDisplayActivity"
            android:label="@string/title_activity_result_display" >
        </activity>
        <activity
            android:name="luke.Instapage.word.activities.FinishedActivity"
            android:label="@string/title_activity_fin" >
        </activity>
        <activity
            android:name="luke.Instapage.word.activities.InfoActivity"
            android:label="@string/title_activity_info" >
        </activity>




    </application>

</manifest>