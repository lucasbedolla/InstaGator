<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <lucas.ventures.ninecrop.cropper.CropImageView
        android:id="@+id/cropImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="12dp"
        android:layout_below="@id/selections">

    </lucas.ventures.ninecrop.cropper.CropImageView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        ads:adSize="BANNER"
        ads:adUnitId="@string/admob_test" />


    <LinearLayout
        android:id="@+id/selections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adView"
        android:layout_margin="12dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/threexone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1"

            android:background="@drawable/button_bgn"
            android:text="3x1"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/threextwo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_bgn"
            android:text="3x2"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/threexthree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:background="@drawable/button_bgn"
            android:text="3x3"
            android:textColor="#ffffff" />

    </LinearLayout>

</RelativeLayout>

