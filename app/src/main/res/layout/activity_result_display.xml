<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:padding="12dp">

    <GridLayout
        android:id="@+id/nine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button_bgn"
        android:padding="40dp"
        android:layout_alignParentTop="true"
        android:columnCount="3"
        android:rowCount="3">

        <ImageView
            android:id="@+id/oneone"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="6dp"
            android:adjustViewBounds="true"
            android:layout_rowWeight="1" />

        <ImageView
            android:id="@+id/onetwo"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="6dp"
            android:layout_rowWeight="1"
            android:adjustViewBounds="true" />

        <ImageView
            android:id="@+id/onethree"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="6dp"
            android:layout_rowWeight="1"
            android:adjustViewBounds="true" />

        <ImageView
            android:id="@+id/twoone"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="6dp"
            android:layout_rowWeight="1"
            android:adjustViewBounds="true" />

        <ImageView
            android:id="@+id/twotwo"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="6dp"
            android:layout_rowWeight="1"
            android:adjustViewBounds="true" />

        <ImageView
            android:id="@+id/twothree"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="6dp"
            android:layout_rowWeight="1"
            android:adjustViewBounds="true" />

        <ImageView
            android:id="@+id/threeone"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="6dp"
            android:layout_rowWeight="1"
            android:adjustViewBounds="true" />

        <ImageView
            android:id="@+id/threetwo"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="6dp"
            android:layout_rowWeight="1"
            android:adjustViewBounds="true" />

        <ImageView
            android:id="@+id/threethree"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="6dp"
            android:layout_marginStart="6dp"
            android:layout_rowWeight="1"
            android:adjustViewBounds="true" />
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@drawable/button_bgn"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_save"
            android:gravity="center"
            android:padding="12dp"
            android:adjustViewBounds="true" />

        <ImageButton
            android:id="@+id/post"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="12dp"
            android:src="@drawable/ic_rate"
            android:adjustViewBounds="true"
            android:gravity="center" />
    </LinearLayout>

</RelativeLayout>